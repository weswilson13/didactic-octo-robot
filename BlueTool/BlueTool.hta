<!DOCTYPE html>
<html>
<head>
    <title>Active Directory User Editor</title>
    <HTA:APPLICATION
        ID="ADUserEditor"
        APPLICATIONNAME="AD User Editor"
        SCROLL="yes"
        SINGLEINSTANCE="yes"
        WINDOWSTATE="normal"
        BORDER="dialog"
        CAPTION="yes">
    </HTA:APPLICATION>
    <script type="text/javascript" src="HTAFunctions.js"></script>
</head>
<body onload="OnLoad()">
    <h2>Active Directory User Editor</h2>
    <form>
        <label for="givenName">Given Name:</label>
        <input type="text" id="givenName"><br><br>
        <label for="displayName">Display Name:</label>
        <input type="text" id="displayName"><br><br>
        <label for="telephoneNumber">Telephone Number:</label>
        <input type="text" id="telephoneNumber"><br><br>
        <input type="button" value="Update" onclick="UpdateUser()">
    </form>
    <h2>Active Directory User Lookup</h2>
    <form>
        <label for="userName">Username:</label>
        <input type="text" id="userName"><br><br>
        <input type="button" value="Lookup" onclick="LookupUser()">
    </form>
</body>
</html>
